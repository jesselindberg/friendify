<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userInfoCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="16dp" >

        <ImageView
            android:id="@+id/cardUserImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/profile_round"
            android:contentDescription="User profile image" />

        <TextView
            android:id="@+id/cardUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:layout_toRightOf="@+id/cardUserImage"
            android:text="Username"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/cardChatIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cardUsername"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="17dp" />

        <Button
            android:id="@+id/oneOnOneChatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="17dp"/>

        <ImageButton
            android:id="@+id/likeReactionBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="175dp"
            android:alpha="1"
            android:background="#FFFFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/like_image" />

        <ImageButton
            android:id="@+id/adoreReactionBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="145dp"
            android:alpha="1"
            android:background="#FFFFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/adore_image" />

        <ImageButton
            android:id="@+id/cheerReactionBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="115dp"
            android:alpha="1"
            android:background="#FFFFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/cheer_image" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>